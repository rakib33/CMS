@model CMS.Models.mcmsSubscribeUser
@{

    Layout = "~/Views/Shared/_ShareLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UnSubscribe</title>
</head>
<body>
    @using (Html.BeginForm("UnSubsCribe", "Subscribe", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div style="text-align:center">
            <table style="max-width:500px;margin:auto">
                <tr>
                    <td colspan="2" style="text-align:left;font-size:medium;color:red;">
                        UnSubscribe
                    </td>
                </tr>
                <tr style="background-color:#f1ebeb">
                    <th colspan="2">
                        <p>
                            @Html.TextBoxFor(model => model.PhoneCode, new { VALUE = "+88018", @readonly = "readonly", style = "border:none;width:50px;text-align: left;background-color:#f1ebeb;" })   @*value = @Model.RIF,*@
                            @Html.TextBoxFor(model => model.UserPhoneNo, new { VALUE = "xxxxxxx" })
                            <br />
                            @Html.ValidationMessageFor(model => model.UserPhoneNo)
                        </p>
                    </th>
                </tr>

                <tr style="background-color:#f1ebeb;">
                    <td colspan="2" style="text-align:left;padding-left:8em">
                     
                        @Html.RadioButton("msg","1")@Html.Label("Not Useful")<br />
                        @Html.RadioButton("msg", "2")@Html.Label("Charge Is High")<br />
                        @Html.RadioButton("msg", "3")@Html.Label("Will Subscribe later")<br />
                        @Html.RadioButton("msg", "4")@Html.Label("Others")
                    </td>
                </tr>
                
                <tr>
                    <td style="background-color:#c61313;width:200px;">

                        <a href="" style="text-decoration: none !important; padding: .3em; color:#fff; ">Cancel</a>
                    </td>
                    <td style="background-color:#c61313;width:200px;">
                        <input style="background-color: #c61313; width: 100%; border: none; color: #fff;" type="submit" value="Next" />
                    </td>
                </tr>
            </table>
        </div>
    }
</body>
</html>
