@model IEnumerable<CMS.Models.Content_m_d>

@{    
    if (ViewBag.Device != null)
    {
        Layout = null;
    }
    else
    {
        Layout = "~/Views/Shared/_ShareLayout.cshtml";
    }
}

<link href="~/Content/CSS/rTable.css" rel="stylesheet" />

<table class="">

    @foreach (var item in Model)
    {

        <tr>
            <td class="@item.ClassName">
                @if (item.aud_ved_img != 0)
                {
                     <img src="@Url.Action("PlayAudio", "Home", new { id = ViewBag.aud_ved_img })" />
                    @*<img src="/Home/PlayAudio/@ViewBag.aud_ved_img" />*@
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Content)
                }
            </td>

        </tr>
    }

</table>
